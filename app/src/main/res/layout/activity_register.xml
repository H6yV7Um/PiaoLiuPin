<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_bg"
    android:orientation="vertical"
    tools:context=".activity.welcome.Register_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tencent_tls_ui_activity_horizontal_margin"
        android:paddingRight="@dimen/tencent_tls_ui_activity_horizontal_margin">

        <com.sy.piaoliupin.customview.EditTextWithListPopupWindow
            android:id="@+id/selectCountryCode_hostRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tencent_tls_ui_edittext_height"
            android:layout_marginBottom="@dimen/tencent_tls_ui_edittext_margin"
            android:background="@drawable/tencent_tls_ui_rounded_rectangle_normal"
            android:paddingLeft="@dimen/tencent_tls_ui_edittext_leftpadding"
            android:paddingRight="@dimen/tencent_tls_ui_edittext_rightpadding"
            android:text="中国大陆 +86"
            android:visibility="gone"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sy.piaoliupin.customview.EditTextWithClearButton
                android:id="@+id/phoneNumber_hostRegister"
                android:layout_width="0dp"
                android:layout_height="@dimen/tencent_tls_ui_edittext_height"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:background="@drawable/edit_bg"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingLeft="@dimen/tencent_tls_ui_edittext_leftpadding"
                android:paddingRight="@dimen/tencent_tls_ui_edittext_rightpadding"
                android:singleLine="true"
                android:textColor="@color/gray_9"
                android:textColorHint="@color/gray_9" />

            <Button
                android:id="@+id/btn_requireCheckCode_hostRegister"
                android:layout_width="0dp"
                android:layout_height="@dimen/tencent_tls_ui_edittext_height"
                android:layout_marginBottom="@dimen/tencent_tls_ui_edittext_margin"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:text="获取验证码"
                android:textColor="@color/style_text_color"
                android:textSize="@dimen/tencent_tls_ui_buttonFontSize" />

        </LinearLayout>

        <EditText
            android:id="@+id/checkCode_hostRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tencent_tls_ui_edittext_height"
            android:layout_marginBottom="@dimen/tencent_tls_ui_edittext_margin"
            android:background="@drawable/edit_bg"
            android:hint="短信验证码"
            android:inputType="number"
            android:paddingLeft="@dimen/tencent_tls_ui_edittext_leftpadding"
            android:singleLine="true"
            android:textColor="@color/gray_9"
            android:textColorHint="@color/gray_9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已阅读并同意"
                android:textColor="@color/gray_cd"
                android:theme="@style/My_CheckBox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户使用协议书》"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_hostRegister"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tencent_tls_ui_edittext_height"
            android:layout_marginTop="@dimen/tencent_tls_ui_edittext_margin"
            android:background="@drawable/btn_bg"
            android:text="注册"
            android:textColor="@color/style_text_color"
            android:textSize="22sp" />


    </LinearLayout>


</LinearLayout>

